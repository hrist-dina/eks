include ../../components/field/field

.modal.modal__auth.js-modal(data-modal-type='auth')
    .modal__inner
        .close.modal__close.js-modal-close
        .modal__head
            .modal__title Войти
            a(href='#').modal__link Регистрация
        .modal__content
            form(action='', method='post').modal__form-auth.js-ajax-auth
                +field('Электронная почта', 'email')
                +field('Пароль', 'password', '', '', 'password')
                button(type='submit').btn.btn-yellow.modal__button-auth Войти
                .modal__link-wrap
                    a(href='#').modal__link.modal__link-forgot Забыли пароль?
