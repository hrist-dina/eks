-
    var sliderMain = [
        {
            img: 'img/slider-main/slide-prod.jpg',
            title: 'Качественная светотехника'
        },
        {
            img: 'img/slider-main/slide-prod.jpg',
            title: 'Качественная светотехника 222'
        },
        {
            img: 'img/slider-main/slide-prod.jpg',
            title: 'Качественная светотехника 333'
        }
    ]

.slider-main
    .slider-main__list.js-slider-main
        for item in sliderMain
            a.slider-main__item(href='#' style=`background-image: url(${item.img})`)
                .slider-main__info
                    .slider-main__title=item.title
                    button.btn.btn-yellow Посмотреть
    .slider-main__controls
        .slider-button.prev.js-slider-main-prev
        .slider-main__counter
            .slider-main__counter-min.js-slider-main-min
            .slider-main__counter-max.js-slider-main-max
        .slider-button.next.js-slider-main-next